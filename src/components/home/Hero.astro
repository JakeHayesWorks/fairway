---
import { BOOK_TEE_TIME_URL, SITE_DESCRIPTION, SITE_TITLE } from "@/consts";
import main from "@/assets/main.avif";
import { Button } from "@/components/ui/button";

const heroAnnouncement = {
  show: false,
  text: "",
  link: {
    href: "#",
    label: "Read more",
    arrow: "→",
  },
};

const heroTitle = SITE_TITLE;
const heroDescription =
  "Offering Upper Arlington and surrounding Columbus communities a premier indoor golf simulator experience. A place to come play 18, analyze your swing, or just come for a good time.";

const heroActions: {
  href: string;
  label: string;
  variant:
    | "default"
    | "link"
    | "outline"
    | "destructive"
    | "secondary"
    | "ghost";
}[] = [
  {
    href: BOOK_TEE_TIME_URL,
    label: "Book a tee time",
    variant: "default",
  },
  {
    href: "/about",
    label: "More about us →",
    variant: "outline",
  },
];

const heroImage = main;
---

<div class="bg-background text-foreground">
  <div class="relative">
    <div class="mx-auto max-w-7xl">
      <div class="relative z-10 pt-14 lg:w-full lg:max-w-2xl">
        <svg
          viewBox="0 0 100 100"
          preserveAspectRatio="none"
          aria-hidden="true"
          class="absolute inset-y-0 right-8 hidden h-full w-80 translate-x-1/2 transform fill-background lg:block dark:fill-card"
        >
          <polygon points="0,0 90,0 50,100 0,100"></polygon>
        </svg>

        <div class="relative px-6 py-32 sm:py-40 lg:px-8 lg:py-56 lg:pr-0">
          <div class="mx-auto max-w-2xl lg:mx-0 lg:max-w-xl">
            {
              heroAnnouncement.show && (
                <div class="hidden sm:mb-10 sm:flex">
                  <div class="relative rounded-full px-3 py-1 text-sm/6 text-muted-foreground ring-1 ring-border hover:ring-border/80">
                    {heroAnnouncement.text}
                    <a
                      href={heroAnnouncement.link.href}
                      class="font-semibold whitespace-nowrap text-primary"
                    >
                      <span aria-hidden="true" class="absolute inset-0" />
                      {heroAnnouncement.link.label}
                      <span aria-hidden="true">
                        {heroAnnouncement.link.arrow}
                      </span>
                    </a>
                  </div>
                </div>
              )
            }
            <h1
              class="text-5xl font-semibold tracking-tight text-pretty text-foreground sm:text-7xl"
            >
              {heroTitle}
            </h1>
            <p
              class="mt-8 text-lg font-medium text-pretty text-muted-foreground sm:text-xl/8"
            >
              {heroDescription}
            </p>
            <div class="mt-10 flex items-center gap-x-6">
              {
                heroActions.map((action) => (
                  <Button variant={action.variant}>
                    <a href={action.href}>{action.label}</a>
                  </Button>
                ))
              }
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="bg-card lg:absolute lg:inset-y-0 lg:right-0 lg:w-1/2">
      <img
        src={heroImage.src}
        alt={SITE_TITLE}
        class="aspect-3/2 object-cover lg:aspect-auto lg:size-full"
      />
    </div>
  </div>
</div>
