---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Button } from "@/components/ui/button";
---

<BaseLayout title="404 - Page Not Found">
  <main
    class="grid min-h-full place-items-center bg-background px-6 py-24 sm:py-32 lg:px-8"
  >
    <div class="text-center">
      <p class="text-base font-semibold text-primary">404</p>
      <h1
        class="mt-4 text-5xl font-semibold tracking-tight text-balance text-foreground sm:text-7xl"
      >
        Page not found
      </h1>
      <p
        class="mt-6 text-lg font-medium text-pretty text-muted-foreground sm:text-xl/8"
      >
        Sorry, we couldn’t find the page you’re looking for.
      </p>
      <div class="mt-10 flex items-center justify-center gap-x-6">
        <Button> <a href="/" class="">Go back home</a></Button>
        <Button variant="link"
          ><a href="/contact" class="text-sm font-semibold text-foreground"
            >Contact support <span aria-hidden="true">&rarr;</span></a
          ></Button
        >
      </div>
    </div>
  </main>
</BaseLayout>
